<!-- How it works -->
<div class="d-flex justify-content-around">
  <h2 class="text-center p-2 mt-4 mb-4 border-bottom border-dark w-75 how-it-works" >How it works</h2>
</div>
<div>
  <div class="banner-cards d-flex justfy-content-around">
    <div class="banner-card">
      <%= image_tag "search.png", alt: "alttext" %>
      <h4>Be inspired</h4>
      <p>Search all lessons from the DI-WISE community</p>
    </div>
    <div class="banner-card">
      <%= image_tag "learn.png", alt: "alttext" %>
      <h4>Build projects</h4>
      <p>Get all the information in one place by saving lessons to your profile</p>
    </div>
    <div class="banner-card">
      <%= image_tag "chat.png", alt: "alttext" %>
      <h4>Connect</h4>
      <p>Message an owner of a lesson to chat all things DIY</p>
    </div>
  </div>
</div>

<!-- Trending projects -->
<div class ="container mb-5">
  <h3 class= "text-center p-2 mt-5 mb-4 border-bottom border-dark ">Trending Projects</h3>
  <div class="home-cards">
    <%= render 'shared/packet_card', packets: @packets %>
  </div>
</div>
