<div class= "container my-5">
  <div class="d-flex justify-content-between">
    <% if params[:query].present? %>
      <h1 class= "border-bottom border-dark mb-3" width=50%= >Results for: <%= params[:query] %></h1>
    <% else %>
      <h1 class= "border-bottom border-dark mb-3" width=50%= >All DIY Lessons</h1>
    <% end %>
    <div class="mt-3 pl-5">
      <span style="font-family: Montserrat, sans-serif;">Sort by </span>
      <a id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span style="color: #6dde89;">
          <i class="fas fa-sort-down" id="sort-down"></i>
        </span>
      </a>
      <div class="dropdown-menu dropdown-menu-right diwise-dropdown" aria-labelledby="navbarDropdown">
        <%= link_to "Popularity", packets_path(popularity: "true", query: params[:query]), class: "dropdown-item", style: "font-family: Montserrat, sans-serif;" %>
        <%= link_to "Newest", packets_path(popularity: "", query: params[:query]), class: "dropdown-item", style: "font-family: Montserrat, sans-serif;"%>
      </div>
    </div>
  </div>

  <div class="container margin-1 mb-5">
    <div class="index-cards">
      <%= render "shared/packet_card" %>
    </div>
  </div>
</div>




