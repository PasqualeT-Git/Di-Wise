<div class='image' style="background-image: linear-gradient(180deg, rgba(196, 196, 196, 0.56) 0%, rgba(255, 255, 255, 0) 300%), url(<%= image_path 'wood.jpg' %>)">
  <div class="container p-3 d-flex justify-content-around align-items-center" >
    <div class="col-8 d-flex justify-content-center align-items-center">
      <div class="card p-5">
        <div class="card-body">
          <div id="form-title">
            <div class="text-center">
             Share Your DI-WISdom
            </div>
          </div>
            <%= simple_form_for @packet do |f| %>
            <div class="form-inputs">
              <%= f.input :title, label: '1) Title', placeholder: 'e.g. Elegant Coffee Table' %>
              <%= f.association :category, label: '2) Select category' %>
              <p>3) Select packet tools</p>
              <%= f.input :packet_tools, input_html: {class: "select2 w-100",  multiple: true },  collection: Tool.all, label: false %>
              <%= f.input :description, label: '4) Any tips and tricks to share?', input_html: { maxlength: 500, size: 500 }, placeholder: '' %>
              <div class="form-inline">
              <%= f.input :photos, as: :file, input_html: { class: "hidden d-none", id:"photo-input", multiple: true }, label_html: { class: 'upload-photo'}, label: '5) ðŸ“· Upload photos' %>
              <%= f.input :video, as: :file, input_html: { class: "hidden d-none" }, label_html: { class: 'upload-photo'}, label: '6) ðŸŽ¬ Upload a video'  %>
              <%= image_tag "", width: 300, class: "hidden", id: "photo-preview" %>
              </div>
              <%= f.input :youtube_url, label: '7) Or paste a Youtube URL', input_html: { maxlength: 500, size: 500}, placeholder: 'https://www.youtube...' %>
              </div>
              <div class="button_cont" align="center">
              <%= f.button :submit, class: "example_e" %>
              </div>
              <%= link_to "Back", root_path, class: "back-button" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

